<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5 m-4 px-4 py-1 bg-secondary text-center">
      <h2>マイページ</h2>
    </div>
  </div>
</div>

<div class="container ml-5">
  <div class="row">
    <h3 class="col-md-6">登録情報
      <%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-success col-md-2 ml-5" %>
    </h3>
  </div>

  <table class="table table-bordered col-md-8">
    <tr>
      <th class="col-md-3 table-active">氏名</th> <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    <tr>
      <th class="col-md-3 table-active">カナ</th> <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="col-md-3 table-active">郵便番号</th> <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="col-md-3 table-active">住所</th> <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="col-md-3 table-active">電話番号</th> <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="col-md-3 table-active">メールアドレス</th> <td><%= @customer.email %></td>
    </tr>
  </table>


  <table class="col-md-7 table-borderless">
    <tr>
      <th class="col-md-3">
        <h3>配送先</h3>
      </th>
      <td>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></h3>
      </td>
    </tr>

    <tr>
      <th class="col-md-3">
        <h3>注文履歴</h3>
      </th>
      <td>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </td>
    </tr>
  </table>
</div>