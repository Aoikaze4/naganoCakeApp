<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5 m-4 px-4 py-1 bg-secondary text-center">
      <h2>注文情報入力</h2>
    </div>
  </div>

<%= form_with model: @order, local: true do |f| %>
  <div>
    <h3>支払い方法</h3>
  </div>
  <%= f.radio_button :payment_method, :credit_card, checked: true %>
  <%= f.label :credit_card %>
  <%= f.radio_button :payment_method, :bank %>
  <%= f.label :bank %>
  <div>
    <h3>お届け先</h3>
  </div>
  <div>
    <%= f.radio_button :address, value: 1, checked: true %>
    <%= f.label "ご自身の住所" %>
    <div><%= @customer_address %></div>
    <div><%= @customer_fullname %></div>
  </div>
  <div>
    <%= f.radio_button :address, value: 2 %>
    <%= f.label "登録済み住所から選択" %>
    <%= f.collection_select :address, @addresses, :id, :view_address_and_name %>
  </div>
  <div>
    <%= f.radio_button :address, value: 3 %>
    <%= f.label "新しいお届け先" %>
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
    <%= f.label "住所" %>
    <%= f.text_field :address_name, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
    <%= f.label "宛名" %>
    <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
  </div>
  <div>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>
<% end %>
</div>