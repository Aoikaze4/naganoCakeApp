<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, size: "300x300", fallback: "no_image.jpg" %>
    </div>

    <div class="col-md-8">
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <h3>￥<%= add_tax_price(@item.price).to_s(:delimited, delimiter: ',') %><span class="add_tax"> (税込み)</h3>


      <%= form_with model: CartItem.new, url: cart_items_path, local:true do |f| %>
      <div class="col-md-12">
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <div class="row mt-5">
            <%= f.select :amount, {"1": 1, "2": 2, "3": 3}, { include_blank: '個数選択' }, { class: 'form-control col-md-2', required: true} %>
            <%= f.submit "カートに入れる", class: "btn btn-sm btn-success col-md-3 ml-5" %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>