<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, size: "300x300", fallbaxk: "no_image.jpg" %>
    </div>
    <div class="col-md-8">
      <div class="col-md-12">
        <h2><%= @item.name %></h2>
        <div class="col-md-12">
          <p><%= @item.introduction %></p>
        </div>
        <div class="col-md-12">
          <h3><span>￥</span><%= add_tax_price.to_s(:delimited, delimiter: ',') %><span class="add_tax"> (税込み)</span></h3>
        </div>
        <%= form_with model: CartItem.new, url: cart_items_path, local:true do |f| %>
        <div class="row">
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <%= f.select :amount, {"1": 1, "2": 2, "3": 3} %>
          <%= f.submit "カートに入れる", class: "btn btn-success col-md-3" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>