<% page_total_price = 0 %>

<% if @cart_items == nil or @cart_items == [] %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 mt-5 m-4 px-4 py-1 bg-secondary text-center">
        <h2>ショッピングカート</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 m-4">
        <%= link_to items_path do %>
          <button class = "btn btn-primary">
            買い物を続ける
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 mt-5 m-4 px-4 py-1 bg-secondary text-center">
        <h2>ショッピングカート</h2>
      </div>
      <div class="col-md-3"></div>
      <div class="col-md-3 mt-5 m-4 px-4 py-1">
        <%= link_to cart_items_path, action: 'destroy_all', method: :delete, data: {confirm: "カートから全ての商品を削除しますか？"} do %>
          <button class = "btn btn-danger btn-sm">カートを空にする</button>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div>
          <table class="table table-bordered">
            <thead>
              <th class="table-active col-md-5">商品名</th>
              <th class="table-active col-md-1">単価(税込)</th>
              <th class="table-active col-md-1">数量</th>
              <th class="table-active col-md-1">小計</th>
              <th class="table-active col-md-1"></th>
            </thead>
            <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td class="align-middle">
                  <%= attachment_image_tag cart_item.item, :image, size: "80x80", fallback: "no_image.jpg" %>
                  <%= name = cart_item.item.name %>
                </td>
                <td class="align-middle">
                  <% price = cart_item.item.price %>
                  <%= price.to_s(:delimited, delimiter: ',') %>
                </td>
                <td class="align-middle">
                  <% amount = cart_item.amount %>
                  <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
                    <div class="row">
                      <%= f.number_field :amount, min: 1, class: 'form-control col-6', required: true %>
                      <%= f.submit "変更", class: "btn btn-success btn-sm col-4" %>
                    </div>
                  <% end %>
                </td>
                <td class="align-middle">
                  <% total_price = price * amount %>
                  <% page_total_price += total_price %>
                  <%= total_price.to_s(:delimited, delimiter: ',') %>
                </td>
                <td class="text-center align-middle">
                <%= link_to cart_item_path(cart_item), method: :delete, data: {confirm: "【"+ name + "】" + " を カートから削除しますか？"} do %>
                  <button class = "btn btn-danger">
                    削除する
                  </button>
                <% end %>
                </td>

              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <div>
    <%= link_to items_path do %>
      <button class = "btn btn-primary">
        買い物を続ける
      </button>
    <% end %>
  </div>

  <div>
    合計金額 <%= page_total_price.to_s(:delimited, delimiter: ',') %>円
  </div>

  <div>
    <%= link_to new_order_path do %>
      <button class= "btn btn-success">
        情報入力に進む
      </button>
    <% end %>
  </div>
<% end %>
</div>
</div>