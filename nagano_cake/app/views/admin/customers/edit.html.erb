<div class="container">
  <div class="row">
    <div class="col-md-6 mt-5 m-4 px-4 py-1 bg-secondary text-center">
      <h2><%= @customer.last_name + @customer.first_name + "さんの会員情報編集" %></h2>
    </div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>
  <div class="row my-4 mt-4">
    <div class="col-md-3">
      会員ID
    </div>
    <div class="col-md-3">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      氏名
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: "form-control", value: @customer.last_name %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: "form-control", value: @customer.first_name %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      フリガナ
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name_kana, class: "form-control", value: @customer.last_name_kana %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name_kana, class: "form-control", value: @customer.first_name_kana %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      郵便番号
    </div>
    <div class="col-md-3">
      <%= f.text_field :postal_code, class: "form-control", value: @customer.postal_code %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      住所
    </div>
    <div class="col-md-6">
      <%= f.text_field :address, class: "form-control", value: @customer.address %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      電話番号
    </div>
    <div class="col-md-3">
      <%= f.text_field :telephone_number, class: "form-control", value: @customer.telephone_number %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      メールアドレス
    </div>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control", value: @customer.email %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      会員ステータス
    </div>
    <div class="col-md-3">
      <%= f.radio_button :is_active, true, checked: @customer.is_active? %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, false, class: "ml-5" %>
      <%= f.label :is_active, "退会" %>
    </div>
  </div>

  <div class="row mt-4 mb-5">
    <div class="col-md-3 offset-md-3">
      <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
    </div>
  </div>
  <% end %>
</div>