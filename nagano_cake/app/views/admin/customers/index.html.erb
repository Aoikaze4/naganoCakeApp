<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5 m-4 px-4 py-1 bg-secondary text-center">
      <h2>会員一覧</h2>
    </div>
  </div>

  <table class="table table-hover table-inverse col-md-12">
    <thead>
      <th>会員ID</th>
      <th colspan="3"><u>氏名</u></th>
      <th>メールアドレス</th>
      <th colspan="3">ステータス</th>
    </thead>
    <tbody>
      <% @customers.each do |f| %>
      <tr>
        <td><%= f.id %></td>
        <td colspan="3"><u><%= link_to f.last_name+f.first_name, admin_customer_path(f.id), class: "text-body" %></u></td>
        <td><%= f.email %></td>
        <% if f.is_active == true %>
        <td class="text-success">有効</td>
        <% else %>
        <td class="text-secondary">退会</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>