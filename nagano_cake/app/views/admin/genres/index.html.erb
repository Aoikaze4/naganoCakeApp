<div class="container">
  <div class="row">
    <div class="col-md-4 mt-5 m-4 px-4 py-1 bg-secondary text-center">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="row my-4 mx-auto d-flex align-items-center">
    <div class="col-md-2 form-row mt-2">
      <%= f.label "ジャンル名" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名" %>
    </div>
    <div class="col-md-4">
      <%= f.submit "新規登録", class: "btn btn-success col-md-4", style: "width: 120px; height: 45px" %>
    </div>
  </div>
  <% end %>

  <table class="table table-hover table-inverse col-md-5">
    <thead>
      <th>ジャンル</th>
      <th></th>
    </thead>
    <tbody>
      <% @genres.each do |f| %>
      <tr>
        <td><%= f.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(f.id), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>