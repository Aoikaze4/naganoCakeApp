<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5 m-4 px-4 py-1 bg-secondary text-center">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>

  <div class="row form-group">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <%= f.label "ジャンル名", class: "col-md-4" %>
    <%= f.text_field :name, class: "form-control col-md-4" %>
    <%= f.submit "新規登録", class: "btn btn-success col-md-4", style: "width: 120px; height: 50px" %>
    <% end %>
  </div>

</div>