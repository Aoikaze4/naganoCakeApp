<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label "姓" %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "名" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "姓(カタカナ)" %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label "名(カタカナ)" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード (上記と同じもの)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %><br />
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
